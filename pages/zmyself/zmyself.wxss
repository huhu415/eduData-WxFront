.image-parent {
    position: relative;
}

.image {
    width: 100%;
}

.child {
    width: 100px;
    height: 24px;
    position: absolute;
    left: 0;
    top: 0px;
    right: 0;
    bottom: 0;
    margin: auto;
    text-align: center;
}

.txkuang {
    position: relative;
    bottom: 60rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    background-color: white;
    border-radius: 6px;
}

.firstblock {
    border-bottom: .5px solid rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: space-between;
    height: 110rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
}

.text {
    font-weight: 300;
    /* 设置透明度为50% */
    margin-top: auto;
    margin-bottom: auto;
    font-size: medium;
}

.textsmall {
    font-weight: 200;
    opacity: 0.5;
    /* 设置透明度为50% */
    font-size: xx-small;
}

.tishi {
    position: fixed;
    flex-wrap: wrap;
    bottom: 0;
    display: flex;
    width: 100%;
    justify-content: center;
    font-size: 9px;
    opacity: 0.5;
    padding-bottom: 7px;
}

.usernum {
    font-size:larger;
    opacity: 0.7;
}


.txkuang button {
    position: relative;
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding-left: 0px;
    padding-right: 0px;
    box-sizing: border-box;
    text-align: center;
    text-decoration: none;
    line-height: 1.35;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    color: #000000;
    background-color: #fff;
    width: 100%;
    height: 100%;
    padding: 0px;
}