<view class="container">
    <form bindsubmit="submit">
        <image src="/图像小.png" mode="aspectFit" />
        <view class="inputRow">
            <view> 账号 </view>
            <input type="text" placeholder="请输入账号" class="phone_number" name="user"> </input>
        </view>
        <view class="inputRow1">
            <viev>密码</viev>
            <input type="text" password="true" placeholder="请输入密码" class="phone_number" name="password"> </input>
        </view>

        <view class="inputRow" style="justify-content: center; border-bottom: 0px; color:darkcyan;margin-left: 0;">
            <!-- <view class="section__title">多列选择器</view> -->
            <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}" range-key="name"name="selector">
                <view>
                    {{multiArray[0][multiIndex[0]].name}}/
                    {{multiArray[1][multiIndex[1]].name}}
                </view>
            </picker>
        </view>

