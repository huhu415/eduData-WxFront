                    <radio value="{{item.value}}" />
                </view>
                <view class="weui-cell__bd">{{item.name}}</view>
            </label>
        </radio-group> -->

        <button class="buttonStyle" type="primary" form-type="submit"> 登陆 </button>
    </form>
</view>